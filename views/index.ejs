<% layout('layout') %>
<div id="myDIV" class="header">
  <h2>My To Do List</h2>
  <form action="/create-item" method="POST">
    <input type="text" id="myInput" name="item" placeholder="Title..." />
    <button class="addBtn">Add</button>
  </form>
</div>

<ul id="myUL">
  <% todolist.forEach(function(item) { %>
  <form>
    <li>
      <span class="item-text"><%= item.item %></span>
      <div class="button-container">
        <button
          data-id="<%= item.id %>"
          class="move-up btn btn-primary btn-sm mr-1"
        >
          △
        </button>
        <button
          data-id="<%= item.id %>"
          class="move-down btn btn-primary btn-sm mr-1"
        >
          ▽
        </button>
        <button
          data-id="<%= item.id %>"
          class="edit-me btn btn-secondary btn-sm mr-1"
        >
          Edit
        </button>
        <button
          data-id="<%= item.id %>"
          class="delete-me btn btn-danger btn-sm"
        >
          Delete
        </button>
      </div>
    </li>
  </form>
  <% }); %>
</ul>
